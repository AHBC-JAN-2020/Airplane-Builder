@model PlaneBuilder.Models.AccountViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

@*<h2>@ViewData["Title"].</h2>*@

<!DOCTYPE html>
<html>
<body background="https://www.metoffice.gov.uk/binaries/content/gallery/metofficegovuk/hero-images/weather/cloud/stratocumulus-from-above-1.jpg">
</body>
</html>

<form asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
    <h1 class="display-3">
        <p style="color:White">Create Your Account</p>
    </h1>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Email" class="sr-only">Email>></label>
        <div class="col-md-10">
            <input asp-for="Email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Password" class="sr-only">Password>></label>
        <div class="col-md-10">
            <input asp-for="Password" class="form-control" placeholder="Password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword" class="sr-only">Confirm Password>></label>
        <div class="col-md-10">
            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
            <small id="ConfrimPassword" class="form-text text-muted">Password must match.</small>
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10">
            @*<button type="submit" class="btn btn-default">Register</button>*@
            <button type="submit" class="btn btn-primary btn-lg">Register</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
